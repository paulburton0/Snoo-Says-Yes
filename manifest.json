{
  "name": "Redditizer",
  "version": "1.0",
  "description": "Quickly check if the page you're viewing has been submitted to Reddit.",
  "icons": { "16": "images/16x16.png",
             "48": "images/48x48.png",
             "128": "images/128x128.png" },
  "browser_action": {
     "default_title": "Redditize this link",
     "default_icon": "images/19x19.png"
  },
  "background_page": "bg.html",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}

